<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/hdr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="horizontal"
        android:background="@color/colorBlack"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:elevation="6dp"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="8dp"
            android:elevation="6dp"
            android:drawableLeft="@drawable/back_arrow_svg"
            android:background="?android:selectableItemBackground" />

        <TextView
            android:id="@+id/txtPromo"
            android:layout_width="0dp"
            android:layout_weight="90"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorWhite"
            android:text="New Product Entry"
            android:fontFamily="@font/amaranth"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="93"
        android:background="@color/colorSilver2"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:gravity="center">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/demo"
                android:elevation="2dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="80"
            android:orientation="vertical"
            android:background="@color/colorSilver"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="horizontal"
                android:paddingRight="5dp"
                android:gravity="center"
                android:padding="15dp">

                <TextView
                    android:id="@+id/ItemName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text=" Item Name"
                    android:textStyle="bold"
                    android:gravity="center|start"
                    android:textSize="16sp"
                    android:elevation="3dp"
                    android:fontFamily="@font/bree_serif"
                    android:textColor="@color/colorBlack"/>

                <Spinner
                    android:id="@+id/iNameSpin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_weight="60"
                    android:textColorHint="@color/colorHint"
                    android:gravity="center|start"
                    android:padding="5dp"
                    android:textColor="@color/colorBG"
                    android:textSize="16sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="horizontal"
                android:paddingRight="5dp"
                android:gravity="center"
                android:padding="15dp">

                <TextView
                    android:id="@+id/pShopName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text=" Item Sub Name"
                    android:textStyle="bold"
                    android:elevation="3dp"
                    android:gravity="center|start"
                    android:textSize="16sp"
                    android:fontFamily="@font/bree_serif"
                    android:textColor="@color/colorBlack"/>

                <Spinner
                    android:id="@+id/iNameSpin2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_weight="60"
                    android:textColorHint="@color/colorHint"
                    android:gravity="center|start"
                    android:padding="5dp"
                    android:textColor="@color/colorBG"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="horizontal"
                android:paddingRight="5dp"
                android:gravity="center"
                android:padding="15dp">

                <TextView
                    android:id="@+id/cDate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text=" Create Date"
                    android:textStyle="bold"
                    android:gravity="center|start"
                    android:textSize="16sp"
                    android:fontFamily="@font/bree_serif"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/cDateV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:hint=" Pick Created Date"
                    android:drawableLeft="@drawable/date24dp"
                    android:textColorHint="@color/colorHint"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:background="@drawable/edit_text_bg"
                    android:textColor="@color/colorBlack"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="horizontal"
                android:paddingRight="5dp"
                android:gravity="center"
                android:padding="15dp">

                <TextView
                    android:id="@+id/createdBy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text=" Created By"
                    android:textStyle="bold"
                    android:gravity="center|start"
                    android:textSize="16sp"
                    android:fontFamily="@font/bree_serif"
                    android:textColor="@color/colorBlack"/>

                <EditText
                    android:id="@+id/createdByV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:hint=" Enter User Name"
                    android:textColorHint="@color/colorHint"
                    android:layout_marginRight="15dp"
                    android:gravity="center|start"
                    android:textSize="16sp"
                    android:background="@drawable/edit_text_bg"
                    android:textColor="@color/colorBlack"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="horizontal"
                android:paddingRight="5dp"
                android:gravity="center"
                android:padding="15dp">

                <TextView
                    android:id="@+id/iTAmount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:text=" Total Amount"
                    android:textStyle="bold"
                    android:gravity="center|start"
                    android:textSize="14sp"
                    android:fontFamily="@font/bree_serif"
                    android:textColor="@color/colorBlack"/>

                <EditText
                    android:id="@+id/iTAmountV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:hint=" Ex. 360Tk"
                    android:textColorHint="@color/colorHint"
                    android:layout_marginRight="15dp"
                    android:gravity="center|start"
                    android:textSize="14sp"
                    android:background="@drawable/edit_text_bg"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/iRate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:text=" Rate"
                    android:textStyle="bold"
                    android:gravity="center|start"
                    android:textSize="14sp"
                    android:fontFamily="@font/bree_serif"
                    android:textColor="@color/colorBlack"/>

                <EditText
                    android:id="@+id/iRateV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:hint=" Ex. 60"
                    android:textColorHint="@color/colorHint"
                    android:layout_marginRight="15dp"
                    android:gravity="center|start"
                    android:textSize="16sp"
                    android:background="@drawable/edit_text_bg"
                    android:textColor="@color/colorBlack"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="horizontal"
                android:paddingRight="5dp"
                android:gravity="center"
                android:padding="15dp">

                <TextView
                    android:id="@+id/iAmount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:text=" Quantity"
                    android:textStyle="bold"
                    android:gravity="center|start"
                    android:textSize="16sp"
                    android:elevation="3dp"
                    android:fontFamily="@font/bree_serif"
                    android:textColor="@color/colorBlack"/>


                <EditText
                    android:id="@+id/iAmountV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:hint=" Ex. 5"
                    android:textColorHint="@color/colorHint"
                    android:layout_marginRight="15dp"
                    android:gravity="center|start"
                    android:textSize="14sp"
                    android:background="@drawable/edit_text_bg"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/iQuantity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:text=" Type"
                    android:textStyle="bold"
                    android:gravity="center|start"
                    android:textSize="16sp"
                    android:elevation="3dp"
                    android:fontFamily="@font/bree_serif"
                    android:textColor="@color/colorBlack"/>


                <EditText
                    android:id="@+id/iQuantityV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:hint=" Ex. kg"
                    android:textColorHint="@color/colorHint"
                    android:layout_marginRight="15dp"
                    android:gravity="center|start"
                    android:textSize="16sp"
                    android:background="@drawable/edit_text_bg"
                    android:textColor="@color/colorBlack"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="horizontal"
                android:paddingRight="5dp"
                android:gravity="center"
                android:padding="15dp">

                <TextView
                    android:id="@+id/iStatus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text=" Discount"
                    android:textStyle="bold"
                    android:gravity="center|start"
                    android:textSize="16sp"
                    android:elevation="3dp"
                    android:fontFamily="@font/bree_serif"
                    android:textColor="@color/colorBlack"/>

                <EditText
                    android:id="@+id/iDisV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:paddingLeft="5dp"
                    android:hint=" Enter Discount"
                    android:textColorHint="@color/colorHint"
                    android:gravity="center|start"
                    android:textSize="16sp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/edit_text_bg"
                    android:fontFamily="@font/bree_serif"
                    android:textColor="@color/colorBlack"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="horizontal"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:padding="15dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/iStock"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text=" Stock"
                    android:textStyle="bold"
                    android:gravity="center|start"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:elevation="3dp"
                    android:fontFamily="@font/bree_serif"
                    android:textColor="@color/colorBlack"/>

                <EditText
                    android:id="@+id/iStockV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:paddingLeft="5dp"
                    android:hint=" Enter Stock"
                    android:textColorHint="@color/colorHint"
                    android:gravity="center|start"
                    android:layout_marginRight="20dp"
                    android:textSize="16sp"
                    android:background="@drawable/edit_text_bg"
                    android:fontFamily="@font/bree_serif"
                    android:textColor="@color/colorBlack"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnSaveEntry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorRed"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="Save Product"
                    android:textStyle="bold"
                    android:background="@drawable/button_enabled"
                    android:fontFamily="@font/bree_serif"
                    android:elevation="6dp"
                    android:padding="5dp"
                    android:layout_marginRight="100dp"
                    android:layout_marginBottom="13dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="105dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center">

        </LinearLayout>

    </LinearLayout>

</LinearLayout>